<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00000000"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fffdfffd"

        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/Imagecontainer"
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:layout_alignParentEnd="true"


            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="#00000000"
            >

            <ImageView
                android:id="@+id/capturedImage"
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:scaleType="fitXY"
                android:layout_alignParentStart="true"
            />

            <TextView
                android:id="@+id/nameOfIssue"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textColor="#FFFFFFFF"
                android:textSize="32dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp" />

            <ImageButton
                android:id="@+id/unsubscribeButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/upload"
                android:src="@android:drawable/ic_menu_delete"
                android:layout_gravity="right|top"
                android:layout_alignParentEnd="true"
                android:background="#00000000" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/backbutton"
                android:src="@drawable/abc_ic_ab_back_mtrl_am_alpha"
                android:background="#00000000"
                android:layout_gravity="bottom|left"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Imagecontainer"
            android:orientation="vertical"
            android:background="@drawable/shape_itemdescription"
            android:layout_margin="2dp"
            android:padding="2dp">
            <TextView
                android:id="@+id/issueStatus"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textColor="#FF000000"
                android:textSize="16dp"
                android:background="@drawable/shape_itemdescription"/>
            <TextView
                android:id="@+id/issuePriority"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textColor="#FF000000"
                android:textSize="16dp"
                android:background="@drawable/shape_itemdescription"
                android:text="fsdfdsfgdg" />

            <TextView
                android:id="@+id/completionDate"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:textColor="#FF000000"
                android:textSize="16dp"
                android:background="@drawable/shape_itemdescription"/>

            <TextView
                android:id="@+id/issueComment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#FF000000"
                android:textSize="16dp"
                android:background="@drawable/shape_itemdescription"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>
