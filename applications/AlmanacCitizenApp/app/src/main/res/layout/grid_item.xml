<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:checkable="true"
    android:background="@drawable/grid_item_selector"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp" android:layout_height="190dp"
        android:background="#FF999999"
        android:scaleType="fitXY"
        android:src="@drawable/waste_container" />
    <LinearLayout
        android:id="@+id/details"
        android:layout_width="150dp" android:layout_height="190dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/nameOfIssue"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textColor="#FF000000"
            android:textSize="32dp"
            />
        <TextView
            android:id="@+id/issuePriority"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textColor="#FF000000"
            android:textSize="32dp"
            />
        <TextView
            android:id="@+id/completionDate"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textColor="#FF000000"
            android:textSize="32dp"
            />
    </LinearLayout>
</RelativeLayout>
