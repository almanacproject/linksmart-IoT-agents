<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/outerLayout"
    android:orientation="horizontal">


<fragment
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/map" tools:context=".MapsActivity"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_alignParentLeft="true"/>
    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="fill_parent"
        android:paddingTop="20dp"
        android:orientation="vertical"
        android:background="@color/side_pane_color"
        android:layout_alignParentLeft="true">
        <ImageView android:id="@+id/logo"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:src="@drawable/logo_black"/>
        <TextView android:id="@+id/distanceText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="20sp"

            android:textStyle="bold"
            android:textColor="@color/update_distance_text_color"
            android:visibility="gone"
            android:layout_below="@+id/logo"
        />
        <ImageView android:id="@+id/diversion"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:src="@drawable/diversion_sign"
            android:visibility="gone"
            android:layout_below="@+id/distanceText"/>

        <Button  android:id="@+id/updateButton"
            android:text="@string/button_update"
            android:textSize="40sp"
            android:layout_width="match_parent"

            android:layout_height="128dp"
            android:background="@color/update_button_color"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_below="@+id/diversion"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <Button  android:id="@+id/cancelButton"
            android:text="@string/button_cancel"
            android:textSize="40sp"
            android:background="@color/cancel_button_color"
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/updateButton"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

</RelativeLayout>
