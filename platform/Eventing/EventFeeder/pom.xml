    <modelVersion>4.0.0</modelVersion>
    <dependencies>
        <dependency>
            <groupId>eu.linksmart</groupId>
            <artifactId>eu.linksmart.api.network</artifactId>
            <version>2.2.0-SNAPSHOT</version>
        </dependency>
      <dependency>
            <groupId>eu.linksmart</groupId>
            <artifactId>eu.linksmart.api.networkmanager</artifactId>
            <version>2.2.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>eu.linksmart</groupId>
            <artifactId>eu.linksmart.api.event.datafusion.core</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>eu.linksmart</groupId>
            <artifactId>eu.linksmart.api.event</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>eu.linksmart</groupId>
            <artifactId>eu.linksmart.event.wrapper.mqtt</artifactId>
            <version>2.2.0-SNAPSHOT</version>
        </dependency>

        <dependency>
            <groupId>eu.linksmart</groupId>
            <artifactId>eu.linksmart.api.event.datafusion</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-core</artifactId>
            <version>2.4.2</version>
        </dependency>

        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>1.7.1</version>
        </dependency>
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
